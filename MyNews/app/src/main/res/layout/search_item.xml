<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_search_frame"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/search_item_bg"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_search_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试"
            android:textColor="@color/search_item_text_color"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_search_item_delete"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="-10dp"
        android:layout_toRightOf="@+id/rl_search_frame"
        android:src="@drawable/icon_delete"
        android:visibility="invisible"/>
</RelativeLayout>