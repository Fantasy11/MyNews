<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="54dp">

        <TextView
            android:id="@+id/tv_grid_view_item_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:background="@drawable/grid_view_item_bg"
            android:gravity="center"
            android:textColor="@drawable/grid_view_item_text_color"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_grid_view_item_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/item_delete"
            android:background="@color/colorWhite"
            android:visibility="invisible" />

    </RelativeLayout>
</RelativeLayout>